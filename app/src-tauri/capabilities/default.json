{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "dialog:default",
    "shell:default",
        {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "args": [
            "--file"
           
          ],
          "name": "binaries/lame",
          "sidecar": true
        }
      ]
    },
    "shell:allow-open"
  ]
}