{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Audify",
  "version": "0.1.2",
  "identifier": "com.audify.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "just prebuild",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Audify",
        "width": 1200,
        "height": 800,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": ["resources/**/*"],
    "externalBin": ["sidecar/binaries/lame"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
