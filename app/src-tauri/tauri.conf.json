{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Mango",
  "version": "0.1.31",
  "identifier": "com.mango.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Mango",
        "width": 1000,
        "height": 800,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "sql": {
      "preload": ["sqlite:eckko.db"]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": ["resources/**/*"],

    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
